// containsVowel(34)           // false
// containsVowel([1, 2, 3])    // false

function containsVowel(x){
    if (typeof x !== "string") {return false}

    else {
        if (x.indexOf("a") >= 0){return true}
        if (x.indexOf("e") >= 0){return true}
        if (x.indexOf("i") >= 0){return true}
        if (x.indexOf("o") >= 0){return true}
        if (x.indexOf("u") >= 0){return true}
        else{return false}
    }
}

